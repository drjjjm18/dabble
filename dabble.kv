#:import rand random.uniform

<SM>:
    EnterName
    Lobby
    GameScreen

<GameScreen>:
    name: 'gamescreen'
    FloatLayout:
        Label:
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            text: root.display_text
        Deck:
            id: deck
            pos_hint: {'center_x': 0.5, 'center_y': 0.675}
            FloatLayout:
                DeckImage:
                    center: deck.center_x - 40, deck.center_y -50
                    image: deck.images[0]
                    source: root.image_lookup[self.image]
                DeckImage:
                    center: deck.center_x, deck.center_y
                    image: deck.images[1]
                    source: root.image_lookup[self.image]
                DeckImage:
                    center: deck.center_x-60, deck.center_y+10
                    image: deck.images[2]
                    source: root.image_lookup[self.image]
                DeckImage:
                    center: deck.center_x-20, deck.center_y+70
                    image: deck.images[3]
                    source: root.image_lookup[self.image]
                DeckImage:
                    center: deck.center_x+10, deck.center_y-65
                    image: deck.images[4]
                    source: root.image_lookup[self.image]
                DeckImage:
                    center: deck.center_x+60, deck.center_y+10
                    image: deck.images[5]
                    source: root.image_lookup[self.image]
                DeckImage:
                    center: deck.center_x+40, deck.center_y+60
                    image: deck.images[6]
                    source: root.image_lookup[self.image]
                DeckImage:
                    center: deck.center_x+60, deck.center_y-40
                    image: deck.images[7]
                    source: root.image_lookup[self.image]
        Card:
            id: card
            im: root.im
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            FloatLayout:
                CardImage:
                    center: card.center_x - 40, card.center_y -50
                    image: card.images[0]
                    source: root.image_lookup[self.image]
                CardImage:
                    center: card.center_x, card.center_y
                    image: card.images[1]
                    source: root.image_lookup[self.image]
                CardImage:
                    center: card.center_x-60, card.center_y+10
                    image: card.images[2]
                    source: root.image_lookup[self.image]
                CardImage:
                    center: card.center_x-20, card.center_y+70
                    image: card.images[3]
                    source: root.image_lookup[self.image]
                CardImage:
                    center: card.center_x+10, card.center_y-65
                    image: card.images[4]
                    source: root.image_lookup[self.image]
                CardImage:
                    center: card.center_x+60, card.center_y+10
                    image: card.images[5]
                    source: root.image_lookup[self.image]
                CardImage:
                    center: card.center_x+40, card.center_y+60
                    image: card.images[6]
                    source: root.image_lookup[self.image]
                CardImage:
                    center: card.center_x+60, card.center_y-40
                    image: card.images[7]
                    source: root.image_lookup[self.image]

        Label:
            pos_hint: {'center_x': 0.8, 'center_y': 0.3}
            text: 'Total Cards:'
        Label:
            pos_hint: {'center_x': 0.8, 'center_y': 0.25}
            text: str(card.total)

<Deck>:
    size_hint: 0.35, None
    height: self.width
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Ellipse:
            size: self.size
            pos: [self.center_x - self.width/2, self.center_y - self.height/2]

<Card>:
    size_hint: 0.35, None
    height: self.width
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Ellipse:
            size: self.size
            pos: [self.center_x - self.width/2, self.center_y - self.height/2]


<CardImage>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
    canvas.after:
        PopMatrix

<DeckImage>:

<EnterName>:
    name: 'entername'
    FloatLayout:
        Label:
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            text: 'WELCOME TO DABBLE'
            font_size: 50
        Label:
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            size_hint: 0.2, 0.2
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'resized/cat1.png'
        Label:
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            text: 'Enter Name:'
            font_size: 35
        TextInput:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.5, 0.1
            font_size: 35
            on_text: app.name = self.text
        Button:
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            size_hint: 0.5, 0.1
            text: 'PLAY'
            font_size: 35
            on_press: root.enter_game()

<Lobby>:
    name: 'lobby'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint_y: 0.2
                text: 'Players in arena:'
            RV:
        FloatLayout:
            Label:
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                text: '    DABBLE \n Arena Lobby'
                font_size: 35
            Label:
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                text: root.latest
                font_size: 20
            Label:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                text: 'has entered the arena'
                font_size: 20
            Button:
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                size_hint: 0.75, 0.1
                text: 'READY'
                on_press: root.ready_press()
            Label:
                pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                text: root.ready_text
            Button:
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                size_hint: 0.75, 0.1
                text: 'BEGIN GAME'
                on_press: root.begin_press()
        FloatLayout:

<RV>:
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: dp(200), dp(30)
        #default_size_hint: 1, 0.1
        size_hint_y: None
        height: self.minimum_height
        width: self.minimum_width
        orientation: 'vertical'